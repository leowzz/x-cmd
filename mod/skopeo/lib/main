# shellcheck shell=dash

xrc:mod:lib     skopeo   __runcmd

___x_cmd_skopeo___main(){
    [ "$#" -gt 0 ] ||   set -- --help

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd_skopeo___help "$@" ;;

        --|--runmain)   ___x_cmd_skopeo___runmain           "$@" ;;
        *)              ___x_cmd_skopeo___runmain   "$op"   "$@" ;;
    esac
}

___x_cmd_skopeo___help(){
    ___x_cmd help -m skopeo "$@"
    ___x_cmd_skopeo___runmain --help
    return 0
}
