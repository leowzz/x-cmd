# shellcheck shell=dash

___X_CMD_WINGET_IS_AVAILABLE=
___x_cmd_winget___env_available(){
    if [ -z "$___X_CMD_WINGET_IS_AVAILABLE" ]; then
        if ___x_cmd os is win || ___x_cmd os is wsl; then
            ___X_CMD_WINGET_IS_AVAILABLE=0
        else
            ___X_CMD_WINGET_IS_AVAILABLE=1
        fi
    fi
    return "$___X_CMD_WINGET_IS_AVAILABLE"
}
