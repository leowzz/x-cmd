# shellcheck shell=dash

___x_cmd_brew_install(){
    local ___X_CMD_BREW___FILTER="${___X_CMD_BREW___FILTER:-fzf}"
    if [ $# -eq 0 ]; then
        ___x_cmd_brew_install___app
    else
        ___x_cmd_brew___exec install    "$@"
    fi
}

___x_cmd_brew_install___app(){
    ___x_cmd brew ls -a
}

